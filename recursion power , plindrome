// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
bool palindrome(string str ,int i, int j){
    // base case
    if(i>j)return true;
    
    if(str[i]!=str[j])return false;
    else{
        return palindrome(str, i+1, j-1);
  }
}
int power(int a, int b){
    if(b==0)return 0;
    if(b==1)return a;
    
    int ans=power(a,b/2);
    if(b%2==0){
        return ans*ans;
    }
    else{
        return 2*ans*ans;
    }
}
int main() {
  string ch="abbac";
  bool ispalindrome= palindrome(ch, 0 , ch.length()-1);
  if(ispalindrome){
      cout<<"String is palindrome  "<<ch<<endl;
  }
  else{
      cout<<"string is not palindrome"<<endl;
  }
   int a=4,b=2;
   int c=power(a,b);
   cout<<"Answer is "<<c<<endl; 
    return 0;
}
